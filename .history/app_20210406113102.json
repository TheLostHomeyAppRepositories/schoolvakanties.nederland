{
  "id": "schoolvakanties.nederland",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "name": {
    "en": "Schoolvakanties",
    "nl": "Schoolvakanties"
  },
  "description": {
    "en": "Check if yesterday/today/tomorrow is or isn't a school holiday",
    "nl": "Controlleer of het gisteren/vandaag/morgen schoolvakantie is of niet"
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "flow": {
    "conditions": [{
      "id": "is_school_holiday",
      "title": {
        "en": "It is school holiday",
        "nl": "Het is schoolvakantie"
      },
      "titleFormatted": {
        "en": "[[day]] it !{{is|isn't}} school holiday in [[regio]]",
        "nl": "[[day]] is het !{{wel|geen}} schoolvakantie in [[regio]]"
      },
      "hint": {
        "en": "This flow will continue when there is/isn't a school holiday",
        "nl": "De flow zal doorgaan als het wel/geen schoolvakantie is"
      },
      "args": [{
        "name": "day",
        "type": "dropdown",
        "values": [{
            "id": "yesterday",
            "label": { 
              "en" : "Yesterday", 
              "nl" : "Gisteren" 
            }
          },
          {
            "id": "today",
            "label": {
              "en" : "Today",
              "nl" : "Vandaag"
            }
          },
          {
            "id": "tomorrow",
            "label": {
              "en" : "Tomorrow",
              "nl" : "Morgen"
            }
          }
        ]
      },{
        "name": "regio",
        "type": "dropdown",
        "values": [{
            "id": "noord",
            "label": { 
              "en" : "North Holland", 
              "nl" : "Noord Holland" 
            }
          },
          {
            "id": "midden",
            "label": {
              "en" : "Middle Nederland",
              "nl" : "Midden Nederland"
            }
          },
          {
            "id": "zuid",
            "label": {
              "en" : "South Holland",
              "nl" : "Zuid Holland"
            }
          }
        ]
      }]
    }]
  },
  "brandColor" : "#01689b",
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Elmar Kouwenhoven",
    "email": "elmarkou@gmail.com"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "elmarkou"
      }
    }
  }
}