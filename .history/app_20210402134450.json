{
  "id": "schoolvakanties.nederland",
  "version": "0.0.1",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "name": {
    "en": "Schoolvakanties"
  },
  "description": {
    "en": "Controlleer of het vandaag schoolvakantie is of niet"
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "flow": {
    "conditions": [{
      "id": "is_holiday",
      "title": "Het is schoolvakanaite",
      "titleFormatted": {
        "en": "Het is !{{wel|geen}} schoolvakantie in [[regio]]"
      },
      "hint": "De flow zal doorgaan als het wel/geen schoolvakantie is",
      "args": [{
        "name": "regio",
        "type": "dropdown",
        "values": [{
            "id": "north",
            "label": { 
              "nl" : "Noord Holland" 
            }
          },
          {
            "id": "middle",
            "label": "Midden Nederland"
          },
          {
            "id": "south",
            "label": "Zuid Holland"
          }
        ]
      }]
    }]
  },
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Elmar Kouwenhoven",
    "email": "elmarkou@gmail.com"
  }
}